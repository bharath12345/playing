# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                 controllers.Application.index


# Sub Pages
GET     /pages/tags                       controllers.Application.tags
GET     /pages/categories                 controllers.Application.categories
GET     /pages/toc                        controllers.Application.toc
GET     /pages/search                     controllers.Application.search


# Blog Route
GET     /post/:id                         controllers.Application.blog(id: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                     controllers.Assets.at(path="/public", file)


