# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                 controllers.Application.index


# Sub Pages
GET     /tags                             controllers.Application.tags
GET     /categories                       controllers.Application.categories
GET     /toc                              controllers.Application.toc
GET     /search                           controllers.Application.search
GET     /test                             controllers.Application.test

GET     /about/books                      controllers.About.books
GET     /about/current                    controllers.About.current
GET     /about/education                  controllers.About.education
GET     /about/movies                     controllers.About.movies
GET     /about/philosophy                 controllers.About.philosophy
GET     /about/travel                     controllers.About.travel
GET     /about/work                       controllers.About.work



# Blog Route
GET     /post/:id                         controllers.Application.blog(id: String)
GET     /tag/:id                          controllers.Application.tag(id: String)
GET     /category/:id                     controllers.Application.category(id: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                     controllers.Assets.at(path="/public", file)


